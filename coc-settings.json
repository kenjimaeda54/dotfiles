{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx"
  ],
  "eslint.packageManager": "yarn",
  "eslint.nodePath": ".yarn/sdks",
  "workspace.workspaceFolderCheckCwd": false,
  "tsserver.tsdk": ".yarn/sdks/typescript/lib",
  "diagnostic.errorSign": "❌",
  "diagnostic.warningSign": "⚠️ ",
  "diagnostic.infoSign": "⚠️ ",
  "javascript.suggestionActions.enabled": false,
  "javascript.validate.enable": false,
  "css.validate": false,
  "scss.validate": false,
  "tslint.autoFixOnSave": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "diagnostic.messageLevel": {
    "type": "string",
    "description": "Filter diagnostic message in float window/popup.",
    "default": null,
    "enum": "error"
  },
  "coc.preferences.messageLevel": {
    "type": "string",
    "description": "Message level for filter echoed messages, could be 'more', 'warning' and 'error'",
    "default": "more",
    "enum": "error"
  },
  "tsserver.formatOnType": true,
  "coc.preferences.formatOnType": true,
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
